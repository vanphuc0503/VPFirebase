<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.vanphuc0503.vpfirebase.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/openLoginFirebase"
            app:destination="@id/loginFirebase" />
    </fragment>

    <fragment
        android:id="@+id/loginFirebase"
        android:name="com.vanphuc0503.vpfirebase.fragment.login.LoginFirebaseFragment"
        android:label="fragment_login_firebase"
        tools:layout="@layout/fragment_login_firebase">

        <action
            android:id="@+id/openHomeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/openOTPFragment"
            app:destination="@id/OTPFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vanphuc0503.vpfirebase.fragment.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/openLoginFirebase"
            app:destination="@id/loginFirebase"
            app:popUpTo="@id/loginFirebase"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/OTPFragment"
        android:name="com.vanphuc0503.vpfirebase.fragment.login.OTPFragment"
        android:label="fragment_o_t_p"
        tools:layout="@layout/fragment_o_t_p">
        <argument
            android:name="phoneNumber"
            app:argType="string" />
    </fragment>

</navigation>